{{#if data}}
  <h3>Users:</h3>
  <table data-test-upload-data-users>
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Campus ID</th>
        <th>Subgroup Name</th>
      </tr>
    </thead>
    <tbody>
      {{#each data as |user|}}
        <tr class={{unless user.isValid 'invalid'}}>
          <td>{{user.firstName}}</td>
          <td>{{user.lastName}}</td>
          <td>{{user.campusId}}</td>
          <td>{{user.subGroupName}}</td>
          <td>
            {{#each user.errors as |error|}}
              {{error}}
            {{/each}}
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>

  <button {{action sendValidUsers validUsers}} data-test-upload-data-confirm>Confirm</button>
{{else}}
  <label for='user-file'>Users</label>
  <input id='user-file' type='file' onchange={{action 'updateSelectedFile' value="target.files"}} data-test-user-upload>
{{/if}}
